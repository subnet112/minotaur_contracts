# Deployment Configuration Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# Network RPC URLs
# =============================================================================
# Ethereum Mainnet RPC URL (Alchemy recommended)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/tCMAPrjXUlMZqpkxMfLRr
# Or use Infura: https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# Base Mainnet RPC URL (Alchemy recommended)
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/tCMAPrjXUlMZqpkxMfLRr
# Or use public: https://mainnet.base.org
# Or use Infura: https://base-mainnet.infura.io/v3/YOUR_INFURA_KEY

# Testnet RPC URLs (optional, for testing)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# =============================================================================
# Deployment Credentials
# =============================================================================
# Private key of the deployer account (hex string WITHOUT 0x prefix)
# WARNING: Never commit this to version control!
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Optional: Settlement contract owner address (defaults to deployer if not set)
# SETTLEMENT_OWNER=0x...

# =============================================================================
# Post-Deployment Configuration
# =============================================================================
# Settlement contract address (set after deployment)
# SETTLEMENT_ADDRESS=0x...

# Relayer Configuration
# UPDATE_RELAYER_RESTRICTION=false
# SET_RELAYER_RESTRICTION=false
# TRUSTED_RELAYER=0x...
# TRUSTED_RELAYER_ALLOWED=true

# Interaction Allowlist Configuration
# UPDATE_ALLOWLIST_STATUS=false
# SET_ALLOWLIST_ENABLED=false
# INTERACTION_TARGET=0x...
# INTERACTION_TARGET_ALLOWED=true

